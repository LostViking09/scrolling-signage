{
  "name": "scrolling-signage",
  "version": "1.0.1",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win=portable",
    "build:mac": "electron-builder --mac=dmg",
    "postversion": "git push --follow-tags"
  },
  "author": "LostViking09",
  "license": "MIT",
  "description": "Scrolling signage application",
  "build": {
    "appId": "com.lostviking09.scrolling-signage",
    "productName": "scrolling-signage",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!.vscode",
      "!.git",
      "!dist"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0"
  },
  "dependencies": {
    "command-line-args": "^6.0.1",
    "command-line-usage": "^7.0.3"
  }
}
